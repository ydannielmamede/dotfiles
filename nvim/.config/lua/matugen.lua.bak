 local M = {}

 function M.setup()
   require('base16-colorscheme').setup {
     -- Background tones
     base00 = '#0f212e', -- Default Background
     base01 = '#19374d', -- Lighter Background (status bars)
     base02 = '#173145', -- Selection Background
     base03 = '#5d6c71', -- Comments, Invisibles
     -- Foreground tones
     base04 = '#afb4b6', -- Dark Foreground (status bars)
     base05 = '#f2f3f3', -- Default Foreground
     base06 = '#f2f3f3', -- Light Foreground
     base07 = '#f2f3f3', -- Lightest Foreground
     -- Accent colors
     base08 = '#fd4663', -- Variables, XML Tags, Errors
     base09 = '#8166cc', -- Integers, Constants
     base0A = '#5c78d6', -- Classes, Search Background
     base0B = '#67c4e4', -- Strings, Diff Inserted
     base0C = '#ac96e9', -- Regex, Escape Chars
     base0D = '#93d5ec', -- Functions, Methods
     base0E = '#96a9e9', -- Keywords, Storage
     base0F = '#900017', -- Deprecated, Embedded Tags
   }
 end

 -- Register a signal handler for SIGUSR1 (matugen updates)
 local signal = vim.uv.new_signal()
 signal:start(
   'sigusr1',
   vim.schedule_wrap(function()
     package.loaded['matugen'] = nil
     require('matugen').setup()
   end)
 )

 return M
